<div class="d-flex flex-column align-items-center">
  <h1>Shopping List</h1>

  <div class="d-flex gap-4 mt-5 mb-4 fs-4">
    <span>Amount of food items to buy: <%= @amount_of_items %></span>
    <span>Total value of food needed: <%= "$#{@total_price.round(2)}" %></span>
  </div>

  <table id="missing-foods" class="table table-bordered table-hover border border-3 border-muted rounded-4 rounded">
    <tr class="bg-primary text-white">
      <th>Food</th>
      <th>Quantity</th>
      <th>Total Price</th>
    </tr>
    <% @missing_food.each do |food| %>
      <tr>
        <td><%= food[:name] %></td>
        <td><%= food[:quantity] %></td>
        <td><%= "$#{food[:price].round(2)}" %></td>
      </tr>
    <% end %> 
  </table>
</div>
