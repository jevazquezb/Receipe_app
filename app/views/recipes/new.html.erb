<div class = "container">
<h1 class="">Add recipies</h1>
<%= form_with url: "/recipes/create", method: :post do |form| %>

  <div class="mb-2">
    <%= form.label :name, class:"text-success form-label" %>
    <%= form.text_field :name, :class=>"form-control"  %>
  </div>

  <div class="mb-2">
    <%= form.label :preparation_time, class:"text-success form-label" %>
    <%= form.number_field :preparation_time, step: :any, :class=>"form-control" %>
  </div>

   <div class="mb-2">
    <%= form.label :cooking_time, class:"text-success form-label" %>
    <%= form.number_field :cooking_time, step: :any, :class=>"form-control"  %>
  </div>

  <div class="mb-2">
    <%= form.label :description, class:"form-label text-success" %>
    <%= form.text_area :description, :class=>"form-control" %>
  </div>
<div class="mb-2">
  <%= form.check_box :public, :class=>"form-check-input", :role=>'switch' %>
  <%= form.label :public, "Is the recipe public?",  class:"form-label text-success"%>
  <%= form.hidden_field :user_id, value: current_user.id %>
</div>
  <%= form.submit "Add", :class=>"btn btn-primary" %>
<% end %>
</div>